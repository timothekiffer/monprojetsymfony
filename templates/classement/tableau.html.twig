{% extends 'base.html.twig' %}

{% block title %}Classement{% endblock %}

{% block body %}

<h1 class="center-h1">Classement de la Ligue 3il</h1>
<br>

<div class="container">
    <table class="table table-striped table-hover rounded">
        <thead class="thead-dark">
            <tr>
                <th scope="col" class="text-center">#</th>
                <th scope="col" class="text-center">Nom du Club</th>
                <th scope="col" class="text-center">Nombre de point</th>
                <th scope="col" class="text-center">Diff√©rence de but</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {% set counter = 1 %}
            {% for club in clubs %}
                <tr {% if counter == 1 %} class="table-success" {% elseif counter == 2 %} class="table-info" {% elseif counter == nombreClubs %} class="table-danger" {% elseif counter == nombreClubs - 1 %} class="table-warning" {% else %} class=""{% endif %}>
                    <th scope="row" class="text-center">{{ counter }}</th>
                    <td class="text-center">{{ club.nom }}</td>
                    <td class="text-center">{{ club.points }}</td>
                    <td class="text-center">{{ club.buts }}</td>
                    <td class="text-center"><a href="{{ path('app_club_detail', {'id': club.id}) }}">Voir le club</a></td>
                </tr>
                {% set counter = counter + 1 %}
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}